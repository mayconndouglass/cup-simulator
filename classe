class Team {
  points = 0
  matches = 0
  wins = 0
  draws = 0
  defeats = 0
  gm = 0
  gc = 0

  constructor(name) {
    this.name = name
  }

  // 1 para vitorias e 0 para empates
  resultOfGame(result) {
    const r = result.toUpperCase()
    switch (r) {
      case 'W':
        this.points += 3
        this.wins += 1
        break
      case 'E':
        this.points += 1
        this.draws += 1
        break
      case 'D':
        this.defeats += 1
        break
      default:
        console.log('Resultado Inv√°lido')
    }
  }

  set goalM(quant) {
    this.gm += quant
  }

  set goalS(quant) {
    this.gc += quant
  }

  get saldoG() {
    return this.gm - this.gc
  }
}